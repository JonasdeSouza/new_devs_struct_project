<h1>Novo endereco</h1>

<%= form_with model: @address do |form| %>

  <div class="field">
    <%= form.label :name, 'nome:' %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :cep, 'CEP:' %>
    <%= form.text_field :cep %>
  </div>
  <div class="field">
    <%= form.label :street, 'logradouro:' %>
    <%= form.text_field :street %>
  </div>
  <div class="field">
    <%= form.label :complement, 'complemento:' %>
    <%= form.text_field :complement %>
  </div>
  <div class="field">
    <%= form.label :neighborhood, 'bairro:' %>
    <%= form.text_field :neighborhood %>
  </div>
  <div class="field">
    <%= form.label :city, 'cidade:' %>
    <%= form.text_field :city %>
  </div>
  <div class="field">
    <%= form.label :state, 'estado:' %>
    <%= form.text_field :state %>
  </div>
  <div class="actions">
  <%= form.submit "Finalizar" %>
</div>
<% end %>

