<p id="notice"><%= notice %></p>
<% if logged_in? %>
<h1>SALVE <%= current_user.name %> <%= link_to 'Log Out', log_out_path, method: :delete %></h1>

  <% if current_user.adm != true %>
    <h1>Seu Usuário</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Criado em:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= current_user.name %></td>
          <td><%= current_user.email %></td>
          <td><%= current_user.created_at %></td>
          <td><%= link_to 'Show', current_user %></td>
          <td><%= link_to 'Edit', edit_user_path(current_user) %></td>
          <td><%= link_to 'Destroy', current_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
  </table>

  <% else %>
    <h1>Lista de Usuários</h1>

    <table>
      <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Criado em:</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  <% end %>

<%else %>
  <h4>É preciso logar para ver essa página</h4>
<% end %>

  <br>

<%= link_to 'New User', new_user_path %>
<%= link_to 'Log In', log_in_path %>
