<!DOCTYPE html>
<html>
<head>
  <title>FinalProject</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar d-flex" style="background-color: #194b03;">
  <div class=" container-fluid">
    <div class="d-flex justify-content-start">
      <%= image_tag('logo.png', :height => 100, :width => 175, :align => 'left', :alt => "logo BSBebidas") %>
    </div>
    <div class="d-flex justify-content-center">
      <div class="collapse navbar-collapse container-fluid" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto smooth-scroll center p-3">
          <li class="nav-item">
            <a class="nav-link text-dark text-center font-weight-bold" data-offset="90"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark text-center font-weight-bold" data-offset="90"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark text-center font-weight-bold" data-offset="90"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark text-center font-weight-bold" data-offset="30"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark text-center font-weight-bold" data-offset="90"></a>
          </li>
        </ul>
      </div>
    </div>
    <!-- Social Icon  -->
    <div class="d-flex justify-content-end ">
      <ul class="navbar-nav ml-auto nav-flex-icons">
        <li class="nav-item">
          <a class="nav-link waves-effect waves-light">
            <i class="fas fa-shopping-cart text-white" data-toggle="modal" data-target="#cart">Cart
              (<span class="total-count"></span>) </i>
          </a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle " id="navbarDropdownMenuLink-333" data-toggle="dropdown"
             aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user text-white"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right"
               aria-labelledby="navbarDropdownMenuLink-333 ">
            <% if logged_in? %>
              <a class="dropdown-item" href="#">Bem vindo, <%= current_user.name %></a>
              <a class="dropdown-item" href="users/<%= current_user.id %>">Perfil</a>
              <a class="dropdown-item" href="/log_out">Logout</a>
            <% else %>
              <a class="dropdown-item" href="/log_in">Log In</a>
              <a class="dropdown-item" href="#  "></a>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="content pt-5">
  <%= yield %>
</div>

<!-- Footer -->
<footer class="page-footer font-small blue-grey lighten-5 footer_fixar_rodape">

  <div style="background-color: #194b03;">
    <div class="container-fluid">

      <!-- Grid row-->
      <div class="row py-4 d-flex align-items-center">

        <!-- Grid column -->
        <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">

          <a style="padding: 20px;">
            <%= image_tag("logo_nome.png", :height => 30, :width => 95, :align => 'left', :alt => "logo BSBebidas") %>
          </a>

          <!-- Facebook -->
          <a class="fb-ic">
            <i class="fab fa-facebook-f white-text mr-4 text-white fa-lg"> </i>
          </a>

          <!--Instagram-->
          <a class="ins-ic">
            <i class="fab fa-instagram white-text text-white fa-lg"> </i>
          </a>

        </div>
        <!-- Grid column -->

        <!-- Grid column -->
        <div class="col-md-6 col-lg-7 text-center text-md-right">
          <p class="text-white"><i class="fas fa-home mr-3"></i> Bras√≠lia, BRA</p>
          <p class="text-white"><i class="fas fa-phone mr-3"></i> +55 61 4002-8922</p>
        </div>
        <!-- Grid column -->

      </div>
      <!-- Grid row-->

    </div>
  </div>
</footer>
</body>
</html>
